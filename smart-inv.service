[Unit]
Description=Stock Analysis System
After=network.target

[Service]
Type=simple
User=stock
Group=stock
WorkingDirectory=/opt/smart-inv
Environment="PATH=/opt/smart-inv/venv/bin"
ExecStart=/opt/smart-inv/venv/bin/streamlit run streamlit_app.py --server.port 8501 --server.address 0.0.0.0
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target 